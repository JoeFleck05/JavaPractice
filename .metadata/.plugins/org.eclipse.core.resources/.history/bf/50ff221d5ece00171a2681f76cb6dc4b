package stringCalculaterTwo;

public class StringCalculater {

	public int add(String s) {
		int rtnNum = 0;
		int tempNum = 0;
		String tempStr = "";
		String[] sArr = tempStr.split(",|\n");
		
		for(String sa : sArr) {
			tempNum += Integer.parseInt(sa);
		}
		rtnNum = tempNum;
		return rtnNum;
	}
	
	public String delimiterString(String s) {
		String rtnStr = "";
		String tempString = "";
		tempString = s.replace("//", "");
		tempString = tempString.replaceAll(";", ",");
		rtnStr = tempString;
		return rtnStr;
	}
}

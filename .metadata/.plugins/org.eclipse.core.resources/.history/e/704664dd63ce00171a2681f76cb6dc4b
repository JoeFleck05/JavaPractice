package stringCalculaterTwo;

public class StringCalculater {

	public int add(String s) {
		int rtnNum = 0;
		int tempNum = 0;
		String tempStr = delimiterString(s);
		String[] sArr = tempStr.split(",|\n");
		
		for(String sa : sArr) {
			tempNum += Integer.parseInt(sa);
		}
		rtnNum = tempNum;
		return rtnNum;
	}
	
	public String delimiterString(String s) {
		String rtnStr = "";
		int index = 0;
		String delimiterString = "//";
		int delimiterLength = delimiterString.length() + 1;
		
		if(s.contains(delimiterString)){
			String indexString = s.substring(0, delimiterLength);
			System.out.println(indexString.indexOf(delimiterLength));
		}
		
		return rtnStr;
	}
}

package stringCalculaterTwo;

public class StringCalculater {

	public int add(String s) {
		int rtnNum = 0;
		int tempNum = 0;
		String tempStr = delimiterString(s);
		String[] sArr = tempStr.split(",|\n");
		
		for(String sa : sArr) {
			tempNum += Integer.parseInt(sa);
		}
		rtnNum = tempNum;
		return rtnNum;
	}
	
	public String delimiterString(String s) {
		String rtnStr = "";
		int index = 0;
		String delimiterString = "//";
		int delimiterLength = 0;
		
		if(s.contains(delimiterString)){
			index = s.indexOf("//", 0);
			indexString = s.substring(index);
			System.out.println(indexString);
		}
		tempString = s.replace("//;", "");
		tempString = tempString.replaceAll(";", ",");
		rtnStr = tempString;
		return rtnStr;
	}
}
